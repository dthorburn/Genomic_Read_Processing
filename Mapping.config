singularity.enabled = true

params {
	// Default workflow options - Don't change
	mode = "trim_galore"
	init = false
	help = false
	FastQC = false
	Skip_Map = false
	Skip_Trim = false
	Skip_IndexRef = false

 
	// Trimming options - Only change if trimming paramaters need to be changed from defaults
	TG_threads = 8			// Keep this at 8 on Imperial HPC. The .nf script now only uses this to request cpus in job, not to paramaterise -j option. 
	TG_memory = "12gb"
	TG_walltime = 12  
	TG_Clip_R1 = 20                	// Will trim the 5' end by this much - i.e., primer removal
	TG_Clip_R2 = 20                	// Only a trim_galore option, trimomatic will remove the ClipR1 length on both reads
	TG_qual = 20                   	// Removes low quality tails when phred drops below score
 
 
	// Mapping options
	refGen = "/rds/general/user/dthorbur/home/01_Scripts/06_Methylation/07_Nextflow/00_Resources/VectorBase-54_AgambiaePEST_Genome.fasta" // Required
	BWA_threads = 8
	BWA_memory = "12gb"
	BWA_walltime = 24 
	BWA_RG_PL = "illumina"         	// Update this to the sequencing platform used - Required
	BWA_RG_LB = "pmb1_pure"        	// Update this to dataset name - Required
}

